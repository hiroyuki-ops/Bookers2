<h2>User info</h2>
<%= form_for(@user) do |f| %>
<%= render 'layouts/error_messages', model: f.object %>
  <p>Name</p>
  <%= f.text_field :name %>
  <p>Image</p>
  <%= f.attachment_field :profile_image %>
  <p>introduction</p>
  <%= f.text_area :introduction %>

  <%= f.submit "Update User" %>
<% end %>