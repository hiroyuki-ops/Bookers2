<div class="container">
	<div class="row">
		<div class= "col-xs-3">
			<h1>User info</h1>
            <%= attachment_image_tag @user, :profile_image, size: "100x100", format: 'jpeg', class: "img-circle pull-left profile-img", fallback: "no_image.jpg" %><br>
            <table class="table">
              <tr><td>name<td><td><%= @user.name %><td><tr>
              <tr><td>introduction<td><td><%= @user.introduction %><td><tr>
            </table>
	        <% if @user == current_user %>
              <%= link_to edit_user_path(@user), class: "btn btn-white btn-block" do %>
                <span class="glyphicon glyphicon-wrench" aria-hidden="true"></span>
              <% end %>
            <% end %>

            <%= form_for(@book) do |f|%>
            <%= render 'layouts/error_messages', model: f.object %>
            <h1>New book</h1>

              <h4>Title</h4>
              <%= f.text_field :title %>

              <h4>Option</h4>
              <%= f.text_field :body %>

              <%= f.submit 'Create Book' ,class: "btn btn-block" %>

            <% end %>

		</div>
		<div class= "col-xs-9">
			<table class="table table-striped">
	          <%= flash[:notice] %>
	          <h1>Users</h1>
	          <thead>
		        <tr aline="center">
			      <th>image</th>
			      <th>name</th>
			      <th></th>
		        </tr>
	          </thead>
	          <tbody>
		        <% @users.each do |user| %>
		        <tr>
			      <td>
			      	<%= attachment_image_tag @user, :profile_image, size: "50x50", format: 'jpeg', class: "img-circle pull-left profile-img", fallback: "no_image.jpg" %>
				    
			      </td>
			      <td>
				    <%= user.name %>
			      </td>
			      <td>
				    <%= link_to "Show", user_path(user.id) %>
			      </td>
		        </tr>
		        <% end %>
	           </tbody>
            </table>
		</div>
	</div>
</div>
